

<h1>高级软件工程作业</h1>


<h1>文章列表</h1>

<%= link_to '发表文章', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '显示', article_path(article) %></td>
      <td><%= link_to '编辑', edit_article_path(article) %></td>
      <td><%= link_to '删除', article_path(article),
              method: :delete,
              data: { confirm: '确认要删除这篇文章吗？' } %></td>
    </tr>
  <% end %>
</table>